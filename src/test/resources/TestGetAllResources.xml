<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >


<suite name = "Rest Assured">


    <test name="Get all users">
        <classes>
            <class name="GoRest">
                <parameter name="path" value="/users"></parameter>
                <methods>
                    <include name="get"/>
                </methods>
            </class>
        </classes>
    </test>

